{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "noImplicitAny": true,
    "sourceMap": false,
    "rootDir": "src",
    "outDir": "dist",
    "noEmitOnError": true,
    "strict": true,
    "strictNullChecks": true,
    "lib": [
      "ES7",
      "DOM",
      "ES2017"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}
